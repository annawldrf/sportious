<div class="container court" style="height: 30vh; ">
  <div class="top-part" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('homepage.jpg')%>);">
    <h1>Offer a Sports Lesson:</h1>
  </div>
</div>
<div class="container" style="height: 70vh; ">
  <%= simple_form_for([@court, @lesson]) do |f| %>
      <%= f.input :title, label_html: { class: 'lesson-new-label-1' }, input_html: { class: 'lesson-new-input' }%>
      <%= f.input :description, label_html: { class: 'lesson-new-label' }, input_html: { class: 'lesson-new-input' }%>
      <%#= f.input :start_time, label: false, input_html: { class: 'lesson-new-input' }%>
      <%#= <label for="start_date">Start Date</label> %>
      <div class="individual-flatpickr-styling">
        <p> Start Date </p>
      </div>
      <%= f.text_field :start_time,
                        data: {
                          controller: "flatpickr",
                          enable_time: true,
                          flatpickr_date_format: "Y-m-d H:i",
                          flatpickr_min_date: Time.zone.now,
                          disable_mobile: "true" }
      %>
      <div class="individual-flatpickr-styling">
        <p> End Date </p>
      </div>
      <%= f.text_field :end_time,
                        data: {
                          controller: "flatpickr",
                          enable_time: true,
                          flatpickr_date_format: "Y-m-d H:i",
                          flatpickr_min_date: Time.zone.now,
                          disable_mobile: "true" }
      %>
    <%#= f.input :capacity%>
      <%= f.input :price, label_html: { class: 'lesson-new-label' }, input_html: { class: 'lesson-new-input' }%>
    <%#= f.association :user_id(current_user) %>
    <%#= f.association :court_id(@court) %>
    <%#= f.association :court(court_type) %>
    <%#= f.input :photo, as: :file%>
      <div class="d-flex justify-content-between pb-3">
        <%= link_to 'Back', courts_path, class: "btn btn-secondary mx-3" %>
        <%= f.button :submit, class: "btn btn-new-court mx-3" %>
      </div>
  <% end  %>
</div>

