<div class="container" style="width: 100%; height: 100vh;">
  <h1>Add a New Court:</h1>
  <%= simple_form_for(@court) do |f| %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.association :court_type, collection: CourtType.all %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit %>
      <% end  %>
  <%= link_to 'Back', courts_path, class: "btn"   %>
</div>
