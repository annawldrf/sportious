<div class="accordion" id="accordionReview">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button collapsed my-accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
       📝  Reviews
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionReview">
      <div class="accordion-body my-accordion-body">
        <% court.reviews.each do |review| %>
          <%= render "reviews/review", review: review %>
        <% end %>
        <div class="review-form">
          <%= simple_form_for([@court, @court.reviews.build]) do |f| %>
          <h2>Add your review </h2>
          <div class="input-fields-review">
              <%= f.input :rating, label: 'Your rating', class: 'rating-title', collection: (1..5).to_a%>
              <%= f.input :title, label: 'Add a title' %>
              <%= f.input :content %>
              <button class="btn-flat reviewformbtn"><%= f.button :submit, value: 'Add your review'%></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
